---
layout: layouts/base.njk
---
<div class="w-full md:flex p-8 mt-6 md:ml-6 md:mt-10">
         <div class="font-body md:w-1/3 mb-6">     
                <h1 class="text-2xl pb-4 font-bold">{{  title  }}</h1> 
                <p class="font-body">{{ content | safe }}</p> 
        </div>
        <div class="md:w-2/3 md:flex md:flew-row md:flex-wrap place-content-center">
        {% for thumb in images %}
                <div class="flex flex-col md:w-64">
                        <img class="md:h-fit object-cover mx-2" src={{thumb.img}}>	
                        <p class="text-sm m-2" >{{thumb.caption}}</p>
                </div>
        {% endfor %}	
        </div>
       
</div>
